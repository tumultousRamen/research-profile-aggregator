{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext", 
      "moduleResolution": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }